@model IEnumerable<CptcEvents.Models.EventDetailsViewModel>
@{
    ViewData["Title"] = "My Events";
}

@*This page displays a list of upcoming events for the current user. Events are pulled from the groups the user is a member of.*@

<div class="page-shell">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <p class="text-muted small mb-1 text-uppercase fw-semibold" style="letter-spacing:0.06em;">Calendar</p>
            <h2 class="mb-0">My Upcoming Events</h2>
        </div>
        <a asp-action="Index" asp-controller="Groups" class="btn btn-primary">My Groups</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">You don't have any upcoming events.</p>
        </div>
    }
    else
    {
        @* Horizontal cards that stretch the container width *@
        <div id="eventsList" class="d-flex flex-column gap-3">
            @foreach (EventDetailsViewModel e in Model)
            {
                <div class="card w-100">
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row align-items-start gap-3">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1">
                                    <a asp-action="Details" asp-route-eventId="@e.Id" class="text-decoration-none text-body">@e.Title</a>
                                </h5>
                                @if (!string.IsNullOrWhiteSpace(e.Description))
                                {
                                    <p class="card-text text-muted mb-1">@Html.Raw(e.Description)</p>
                                }
                            </div>
                            <div class="d-flex flex-column align-items-md-end text-md-end h-100">
                                <div class="fw-semibold">@e.DateOfEvent.ToString("MMM d, yyyy")</div>
                                @if (e.IsAllDay)
                                {
                                    <div class="text-muted">All day</div>
                                }
                                else
                                {
                                    <div class="text-muted">@e.StartTime.ToString("h:mm tt") - @e.EndTime.ToString("h:mm tt")</div>
                                }
                                @if (!string.IsNullOrWhiteSpace(e.Url))
                                {
                                    <div><a href="@e.Url" class="small">@e.Url</a></div>
                                }
                                <p class="text-muted small mt-3 mb-0">Group: @e.GroupName</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-end">
                        <a asp-action="Details" asp-route-eventId="@e.Id" class="btn btn-primary btn-sm">Details</a>
                    </div>
                </div>
            }
        </div>
    }
</div>
