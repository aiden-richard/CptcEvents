@model IEnumerable<CptcEvents.Models.Event>
@{
    ViewData["Title"] = "My Events";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Events</h1>
        <a asp-action="Create" class="btn btn-primary">Create New Event</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">You don't have any events yet. <a asp-action="Create">Create your first event</a> or join a group to see events.</p>
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Group</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Public</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Event eventItem in Model)
                {
                    <tr>
                        <td>@eventItem.Title</td>
                        <td>@eventItem.Group?.Name</td>
                        <td>@eventItem.DateOfEvent.ToString("MMM d, yyyy")</td>
                        <td>
                            @if (eventItem.IsAllDay)
                            {
                                <span class="badge bg-secondary">All Day</span>
                            }
                            else
                            {
                                @eventItem.StartTime.ToString("h:mm tt") <text>-</text> @eventItem.EndTime.ToString("h:mm tt")
                            }
                        </td>
                        <td>
                            @if (eventItem.IsPublic)
                            {
                                <span class="badge bg-success">Public</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Private</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-eventId="@eventItem.Id" class="btn btn-outline-primary">Details</a>
                                <a asp-action="Edit" asp-route-eventId="@eventItem.Id" class="btn btn-outline-secondary">Edit</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
