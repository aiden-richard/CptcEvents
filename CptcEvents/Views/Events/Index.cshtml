@model IEnumerable<CptcEvents.Models.EventDetailsViewModel>
@using CptcEvents.Models
@{
    ViewData["Title"] = "My Events";
}

@*This page displays a list of upcoming events for the current user. Events are pulled from the groups the user is a member of.*@

<div class="page-shell">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <p class="text-muted small mb-1 text-uppercase fw-semibold" style="letter-spacing:0.06em;">Calendar</p>
            <h2 class="mb-0">My Upcoming Events</h2>
        </div>
        <a asp-action="Index" asp-controller="Groups" class="btn btn-primary">My Groups</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <p class="mb-0">You don't have any upcoming events.</p>
        </div>
    }
    else
    {
        @* Horizontal cards that stretch the container width *@
        <div id="eventsList" class="d-flex flex-column gap-1">
            @foreach (EventDetailsViewModel e in Model)
            {
                <div class="card w-100">
                    <div class="card-body p-2">
                        <div class="d-flex flex-column flex-lg-row align-items-start justify-content-between gap-2">
                            <div class="flex-grow-1 d-flex flex-column justify-content-center">
                                <p class="fw-semibold mb-1">
                                    <a asp-controller="Groups" asp-action="Events" asp-route-groupId="@e.GroupId" class="text-decoration-none text-body">@e.GroupName</a>
                                </p>
                                <h6 class="mb-0">
                                    <a asp-action="Details" asp-route-eventId="@e.Id" class="text-decoration-none text-body">@e.Title</a>
                                </h6>
                            </div>
                            <div class="d-flex flex-column align-items-lg-end text-lg-end flex-shrink-0">
                                <div class="fw-semibold small">@e.DateOfEvent.ToString("MMM d, yyyy")</div>
                                @if (e.IsAllDay)
                                {
                                    <div class="text-muted small">All day</div>
                                }
                                else
                                {
                                    <div class="text-muted small">@e.StartTime.ToString("h:mm tt") - @e.EndTime.ToString("h:mm tt")</div>
                                }
                                <div class="d-flex gap-1 mt-1">
                                    @if (e.IsRsvpEnabled && e.CurrentUserRsvpStatus.HasValue)
                                    {
                                        @switch (e.CurrentUserRsvpStatus.Value)
                                        {
                                            case RsvpStatus.Going:
                                                <span class="badge text-bg-success" style="font-size: 0.65rem;">Going</span>
                                                break;
                                            case RsvpStatus.Maybe:
                                                <span class="badge text-bg-warning" style="font-size: 0.65rem;">Maybe</span>
                                                break;
                                            case RsvpStatus.NotGoing:
                                                <span class="badge text-bg-secondary" style="font-size: 0.65rem;">Not Going</span>
                                                break;
                                        }
                                    }
                                    @if (e.IsRsvpEnabled && e.GoingCount > 0)
                                    {
                                        <span class="text-muted" style="font-size: 0.7rem;">@e.GoingCount going</span>
                                    }
                                </div>
                                <a asp-action="Details" asp-route-eventId="@e.Id" class="btn btn-outline-primary btn-sm mt-2">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
