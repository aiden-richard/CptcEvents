@model CptcEvents.Models.Event
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">@Model.Title</h4>
                    @if (Model.IsPublic)
                    {
                        <span class="badge bg-success">Public</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Private</span>
                    }
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="card-text">@Model.Description</p>
                        <hr />
                    }

                    <dl class="row mb-0">
                        <dt class="col-sm-3">Group</dt>
                        <dd class="col-sm-9">@Model.Group?.Name</dd>

                        <dt class="col-sm-3">Date</dt>
                        <dd class="col-sm-9">@Model.DateOfEvent.ToString("dddd, MMMM d, yyyy")</dd>

                        <dt class="col-sm-3">Time</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsAllDay)
                            {
                                <span>All Day</span>
                            }
                            else
                            {
                                @Model.StartTime.ToString("h:mm tt") <text>-</text> @Model.EndTime.ToString("h:mm tt")
                            }
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Url))
                        {
                            <dt class="col-sm-3">Link</dt>
                            <dd class="col-sm-9">
                                <a href="@Model.Url" target="_blank" rel="noopener noreferrer">@Model.Url</a>
                            </dd>
                        }
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to Events</a>
                    <div>
                        <a asp-action="Edit" asp-route-eventId="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-eventId="@Model.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
