@{
    ViewData["Title"] = "Home Page";
}

@* Landing page with hero CTA and shared calendar overview *@

<div class="home-shell">
    <div class="card hero-card shadow-soft">
        <div class="card-body">
            <h1 class="mb-2">Welcome to CPTC Events</h1>
            <p class="text-muted mb-3">Keep track of upcoming events, important dates, and more. All in one place.</p>
            <div class="d-flex flex-wrap gap-2">
                <a class="btn btn-primary" asp-controller="Events" asp-action="Index">View upcoming events</a>
                <a class="btn btn-outline-primary" asp-controller="Groups" asp-action="Index">Browse groups</a>
            </div>
        </div>
    </div>

    <div class="card shadow-soft calendar-card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <div>
                    <h5 class="mb-1">Events calendar</h5>
                    <p class="text-muted mb-0 small">Plan ahead with month, week, or day views.</p>
                </div>
            </div>
            @await Component.InvokeAsync("Calendar", new { 
                eventsUrl = Url.Action("GetEvents", "Events"), 
                elementId = "calendar",
                initialView = "dayGridMonth"
            })
        </div>
    </div>
</div>