@using System.Linq
@model CptcEvents.Models.ViewModels.ApprovePublicEventsViewModel

@{
    ViewData["Title"] = "Approve Public Events";
}

<div class="page-shell">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
        <div>
            <p class="text-muted small mb-1">Admin</p>
            <h2 class="mb-0">Approve Public Events</h2>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Admin")">Back to admin</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Pending Approval Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Pending Approval</h5>
        </div>
        <div class="card-body">
            @if (Model.PendingEvents.Any())
            {
                <p class="text-muted small mb-3">@Model.PendingEvents.Count() event(s) pending approval</p>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Group</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Created By</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model.PendingEvents)
                            {
                                <tr>
                                    <td>
                                        <strong>@evt.Title</strong>
                                        @if (!string.IsNullOrEmpty(evt.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@evt.Description</small>
                                        }
                                    </td>
                                    <td>@evt.Group?.Name</td>
                                    <td>@evt.DateOfEvent.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (evt.IsAllDay)
                                        {
                                            <span>All day</span>
                                        }
                                        else
                                        {
                                            <span>@evt.StartTime.ToString("hh\\:mm") - @evt.EndTime.ToString("hh\\:mm")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (evt.CreatedByUser != null)
                                        {
                                            <small>@evt.CreatedByUser.UserName</small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <form method="post" action="@Url.Action("ApproveEvent", "Admin")" style="display: inline;" class="me-1">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="eventId" value="@evt.Id" />
                                            <button type="submit" class="btn btn-sm btn-success">
                                                Approve
                                            </button>
                                        </form>
                                        <form method="post" action="@Url.Action("DenyEvent", "Admin")" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="eventId" value="@evt.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                Deny
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No events pending approval.</p>
            }
        </div>
    </div>

    <!-- Approved Events Section -->
    <div class="card shadow-sm">
        <div class="card-header bg-success">
            <h5 class="mb-0 text-white">Approved Events</h5>
        </div>
        <div class="card-body">
            @if (Model.ApprovedEvents.Any())
            {
                <p class="text-muted small mb-3">@Model.ApprovedEvents.Count() event(s) approved</p>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Group</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Created By</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model.ApprovedEvents)
                            {
                                <tr>
                                    <td>
                                        <strong>@evt.Title</strong>
                                        @if (!string.IsNullOrEmpty(evt.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@evt.Description</small>
                                        }
                                    </td>
                                    <td>@evt.Group?.Name</td>
                                    <td>@evt.DateOfEvent.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (evt.IsAllDay)
                                        {
                                            <span>All day</span>
                                        }
                                        else
                                        {
                                            <span>@evt.StartTime.ToString("hh\\:mm") - @evt.EndTime.ToString("hh\\:mm")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (evt.CreatedByUser != null)
                                        {
                                            <small>@evt.CreatedByUser.UserName</small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <form method="post" action="@Url.Action("RevokeApproval", "Admin")" style="display: inline;" onsubmit="return confirm('Revoke approval for this event?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="eventId" value="@evt.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                Revoke
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No approved events.</p>
            }
        </div>
    </div>

    <!-- Denied Events Section -->
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-danger">
            <h5 class="mb-0 text-white">Denied Events</h5>
        </div>
        <div class="card-body">
            @if (Model.DeniedEvents.Any())
            {
                <p class="text-muted small mb-3">@Model.DeniedEvents.Count() event(s) denied</p>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Group</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Created By</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var evt in Model.DeniedEvents)
                            {
                                <tr>
                                    <td>
                                        <strong>@evt.Title</strong>
                                        @if (!string.IsNullOrEmpty(evt.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@evt.Description</small>
                                        }
                                    </td>
                                    <td>@evt.Group?.Name</td>
                                    <td>@evt.DateOfEvent.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (evt.IsAllDay)
                                        {
                                            <span>All day</span>
                                        }
                                        else
                                        {
                                            <span>@evt.StartTime.ToString("hh\\:mm") - @evt.EndTime.ToString("hh\\:mm")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (evt.CreatedByUser != null)
                                        {
                                            <small>@evt.CreatedByUser.UserName</small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <form method="post" action="@Url.Action("RestoreEvent", "Admin")" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="eventId" value="@evt.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary">
                                                Restore
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">No denied events.</p>
            }
        </div>
    </div>
</div>
