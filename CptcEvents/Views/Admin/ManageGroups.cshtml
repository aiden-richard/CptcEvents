@model IEnumerable<CptcEvents.Models.Group>

@{
    ViewData["Title"] = "Manage All Groups";
}

<div class="page-shell">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
        <div>
            <p class="text-muted small mb-1">Admin</p>
            <h2 class="mb-0">All Groups</h2>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Admin")">Back to admin</a>
        </div>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex flex-wrap gap-2 align-items-center">
            <span class="text-muted small">@Model.Count() groups in the system</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>Privacy Level</th>
                    <th>Members</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model)
                {
                    <tr>
                        <td>
                            <strong>@group.Name</strong>
                            @if (!string.IsNullOrEmpty(group.Description))
                            {
                                <br><small class="text-muted">@group.Description</small>
                            }
                        </td>
                        <td>
                            @if (group.Members?.FirstOrDefault(m => m.Role == CptcEvents.Models.RoleType.Owner)?.User != null)
                            {
                                var owner = group.Members.First(m => m.Role == CptcEvents.Models.RoleType.Owner).User;
                                @owner.Email
                            }
                            else
                            {
                                <span class="text-muted">Unknown</span>
                            }
                        </td>
                        <td>
                            <span class="badge @(group.PrivacyLevel == CptcEvents.Models.PrivacyLevel.Public ? "bg-success" : "bg-warning")">
                                @group.PrivacyLevel
                            </span>
                        </td>
                        <td>@(group.Members?.Count ?? 0)</td>
                        <td>@group.CreatedAt.ToString("MMM d, yyyy")</td>
                        <td class="text-end">
                            <a href="@Url.Action("Events", "Groups", new { groupId = group.Id })" class="btn btn-sm btn-outline-secondary">Details</a>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <p class="text-muted mb-0">No groups found in the system.</p>
            </div>
        </div>
    }
</div>