@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="page-shell">
    <div>
        <p class="text-muted small mb-1 text-uppercase fw-semibold" style="letter-spacing:0.06em;">Administration</p>
        <h2 class="mb-0">@ViewData["Title"]</h2>
    </div>

    <div class="row g-3">
        <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Instructor Codes</h5>
                <p class="card-text">Manage instructor codes.</p>
                <a href="@Url.Action("ManageInstructorCodes", "Admin")" class="btn btn-primary">View Codes</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Approve Events for Homepage</h5>
                <p class="card-text">Manage Homepage Events.</p>
                <a href="@Url.Action("ApprovePublicEvents", "Admin")" class="btn btn-primary">Review Events</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">All Groups</h5>
                <p class="card-text">View and manage all groups in the system.</p>
                <a href="@Url.Action("ManageGroups", "Admin")" class="btn btn-primary">Manage Groups</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">All Events</h5>
                <p class="card-text">View and manage all events in the system.</p>
                <a href="@Url.Action("ManageEvents", "Admin")" class="btn btn-primary">Manage Events</a>
            </div>
        </div>
    </div>
    </div>
</div>