@model IEnumerable<CptcEvents.Models.Event>

@{
    ViewData["Title"] = "Manage All Events";
}

<div class="page-shell">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 mb-3">
        <div>
            <p class="text-muted small mb-1">Admin</p>
            <h2 class="mb-0">All Events</h2>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Admin")">Back to admin</a>
            <a class="btn btn-outline-primary" href="@Url.Action("ApprovePublicEvents", "Admin")">Manage Public Event Approval</a>
        </div>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body d-flex flex-wrap gap-2 align-items-center">
            <span class="text-muted small">@Model.Count() events in the system</span>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table align-middle">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Group</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Public</th>
                    <th>Approved</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eventItem in Model.OrderByDescending(e => e.DateOfEvent).ThenBy(e => e.StartTime))
                {
                    <tr class="@(eventItem.DateOfEvent < DateOnly.FromDateTime(DateTime.Now) ? "table-secondary" : "")">
                        <td>
                            <strong>@eventItem.Title</strong>
                            @if (!string.IsNullOrEmpty(eventItem.Description))
                            {
                                <br><small class="text-muted">@eventItem.Description.Substring(0, Math.Min(100, eventItem.Description.Length))@(eventItem.Description.Length > 100 ? "..." : "")</small>
                            }
                        </td>
                        <td>
                            @if (eventItem.Group != null)
                            {
                                <a href="@Url.Action("Events", "Groups", new { groupId = eventItem.GroupId })">@eventItem.Group.Name</a>
                            }
                            else
                            {
                                <span class="text-muted">Group @eventItem.GroupId</span>
                            }
                        </td>
                        <td>
                            @eventItem.DateOfEvent.ToString("MMM d, yyyy")
                            @if (eventItem.DateOfEvent < DateOnly.FromDateTime(DateTime.Now))
                            {
                                <br><small class="text-muted">(Past)</small>
                            }
                        </td>
                        <td>
                            @if (eventItem.IsAllDay)
                            {
                                <span class="badge bg-info">All Day</span>
                            }
                            else
                            {
                                @eventItem.StartTime.ToString("h:mm tt")
                                @if (eventItem.EndTime != TimeOnly.MinValue)
                                {
                                    <br><small class="text-muted">to @eventItem.EndTime.ToString("h:mm tt")</small>
                                }
                            }
                        </td>
                        <td>
                            @if (eventItem.IsPublic)
                            {
                                <span class="badge bg-success">Public</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Private</span>
                            }
                        </td>
                        <td>
                            @if (eventItem.IsPublic)
                            {
                                @if (eventItem.IsApprovedPublic)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (eventItem.IsDeniedPublic)
                                {
                                    <span class="badge bg-danger">Denied</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="d-flex justify-content-end flex-nowrap gap-1">
                                <a href="@Url.Action("Details", "Events", new { id = eventItem.Id })" class="btn btn-sm btn-outline-primary">View</a>
                                <a href="@Url.Action("Edit", "Events", new { id = eventItem.Id })" class="btn btn-sm btn-outline-secondary">Edit</a>
                            </div>
                        </td>
                    </tr>
                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <p class="text-muted mb-0">No events found in the system.</p>
            </div>
        </div>
    }
</div>