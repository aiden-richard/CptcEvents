@model CptcEvents.Models.CreateInstructorCodeViewModel

@{
    ViewData["Title"] = "Create Instructor Code";
}

<h1>Create Instructor Code</h1>

<h4>Instructor Code</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateInstructorCode" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Expires" id="expiresToggle" class="form-check-input" />
                    <label asp-for="Expires" class="form-check-label">Expires</label>
                </div>
                <span asp-validation-for="Expires" class="text-danger"></span>
            </div>

            <div class="form-group" id="expiresPicker" style="display:none;">
                <label asp-for="ExpiresAt" class="control-label"></label>
                <input asp-for="ExpiresAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="ManageInstructorCodes" class="btn btn-outline-secondary">Back to codes</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var expiresToggle = document.getElementById('expiresToggle');
            var expiresPicker = document.getElementById('expiresPicker');

            // Set initial visibility based on the checkbox state
            expiresPicker.style.display = expiresToggle.checked ? 'block' : 'none';

            // Add event listener to toggle visibility
            expiresToggle.addEventListener('change', function() {
                if (this.checked) {
                    expiresPicker.style.display = 'block';
                } else {
                    expiresPicker.style.display = 'none';
                    expiresPicker.querySelector('input').value = ''; // Clear the date input when hiding
                }
            });
        });
    </script>
}