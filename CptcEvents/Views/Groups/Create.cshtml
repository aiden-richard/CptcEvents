@model CptcEvents.Models.GroupFormViewModel

@{
    ViewData["Title"] = "Create";
}

@* Form to create a new group *@

<h1>Create</h1>

<h4>Group</h4>
<hr />
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control border-secondary-subtle bg-light" placeholder="Group Name" />
        <label asp-for="Name">Name</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Description" class="form-control border-secondary-subtle bg-light" placeholder="Description" />
        <label asp-for="Description">Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <select asp-for="PrivacyLevel" class="form-select border-secondary-subtle bg-light" asp-items="@(Html.GetEnumSelectList<CptcEvents.Models.PrivacyLevel>())"></select>
        <label asp-for="PrivacyLevel">Privacy</label>
        <span asp-validation-for="PrivacyLevel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Color" class="form-label">Group Color</label>
        <div class="d-flex gap-2 align-items-center">
            <input asp-for="Color" type="color" class="form-control form-control-color" id="colorPicker" style="width: 60px; height: 40px;" />
            <input asp-for="Color" type="text" class="form-control" id="colorText" placeholder="#0d6efd" />
        </div>
        <small class="text-muted">Choose a color for this group's events on the calendar</small>
        <span asp-validation-for="Color" class="text-danger d-block"></span>
    </div>

    <div class="form-group mt-1">
        <input type="submit" value="Create" class="w-100 btn btn-lg btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const colorPicker = document.getElementById('colorPicker');
            const colorText = document.getElementById('colorText');
            
            // Always generate a random color on page load
            const randomColor = '#' + Math.floor(Math.random() * 16777215).toString(16).padStart(6, '0');
            colorPicker.value = randomColor;
            colorText.value = randomColor;
            
            // Sync color picker and text input
            colorPicker.addEventListener('change', function() {
                colorText.value = this.value;
            });
            
            colorText.addEventListener('change', function() {
                if (/^#[0-9A-Fa-f]{6}$/.test(this.value)) {
                    colorPicker.value = this.value;
                }
            });
        });
    </script>
}
