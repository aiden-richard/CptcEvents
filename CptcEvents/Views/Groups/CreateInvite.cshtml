@model CptcEvents.Models.GroupInviteViewModel

@{
    ViewData["Title"] = "Create";
}

@* Page header for creating a new group invite *@
<h1>Create</h1>

@* Form for generating a new invite to a group *@
<h4>Invite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Submit form to create the invite *@
        <form asp-action="CreateInvite" asp-all-route-groupId="@Model.GroupId" method="post">
            @* Display any validation errors *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Hidden field for GroupId (comes from route) *@
            <input asp-for="GroupId" type="hidden" />

            @* Specify who to invite (by username) *@
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            @* Toggle whether the invite has an expiration date *@
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Expires" id="expiresToggle" class="form-check-input" />
                    <label asp-for="Expires" class="form-check-label">Expires</label>
                </div>
                <span asp-validation-for="Expires" class="text-danger"></span>
            </div>

            @* Date picker for when the invite expires (shown when toggle is enabled) *@
            <div class="form-group" id="expiresPicker" style="display:none;">
                <label asp-for="ExpiresAt" class="control-label"></label>
                <input asp-for="ExpiresAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="ExpiresAt" class="text-danger"></span>
            </div>

            @* Toggle to make this invite usable only once *@
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="OneTimeUse" id="OneTimeUse" class="form-check-input" />
                    <label asp-for="OneTimeUse" class="form-check-label"></label>
                </div>
                <span asp-validation-for="OneTimeUse" class="text-danger"></span>
            </div>

            @* Submit button to create the invite *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="ManageInvites" asp-route-groupId="@Model.GroupId" class="btn btn-outline-secondary">Back to invites</a>
            </div>
        </form>
    </div>
</div>

@* Include validation scripts and toggle script for expiry date picker *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var expiresToggle = document.getElementById('expiresToggle');
            var expiresPicker = document.getElementById('expiresPicker');

            // Set initial visibility based on the checkbox state
            expiresPicker.style.display = expiresToggle.checked ? 'block' : 'none';

            // Add event listener to toggle visibility
            expiresToggle.addEventListener('change', function() {
                if (this.checked) {
                    expiresPicker.style.display = 'block';
                } else {
                    expiresPicker.style.display = 'none';
                    expiresPicker.querySelector('input').value = ''; // Clear the date input when hiding
                }
            });

            var oneTimeUseCheckbox = document.getElementById('OneTimeUse');
            var usernameInput = document.getElementById('Username');

            function syncOneTimeUseWithUsername() {
                var hasUser = usernameInput.value.trim() !== '';
                if (hasUser) {
                    oneTimeUseCheckbox.checked = true;
                    oneTimeUseCheckbox.dataset.locked = "true";
                } else {
                    delete oneTimeUseCheckbox.dataset.locked;
                }
            }

            usernameInput.addEventListener('input', syncOneTimeUseWithUsername);
            oneTimeUseCheckbox.addEventListener('change', function () {
                if (oneTimeUseCheckbox.dataset.locked === "true") {
                    this.checked = true; // enforce one-time when inviting a specific user
                }
            });

            // initialize on load
            syncOneTimeUseWithUsername();
        });
    </script>
}