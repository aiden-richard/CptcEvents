@using CptcEvents.Models
@model IEnumerable<GroupInvite>

@{
    ViewData["Title"] = "My Invites";
}

@* Lists all invites created by the current user *@

@* List all of the invites you've created *@
<h1>@ViewData["Title"]</h1>

@* Table showing invite codes, groups, dates, and statuses *@
<table class="table table-striped" id="invitesTable" style="margin-top:1rem;">
    <thead>
        <tr>
            <th>Code</th>
            <th>Group</th>
            <th>Created At (UTC)</th>
            <th>Expires At (UTC)</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @* Loop through and display each invite *@
        @foreach (var invite in Model ?? Enumerable.Empty<GroupInvite>())
        {
            @* Determine if the invite is still active *@
            <tr>
                <td>@invite.InviteCode</td>
                <td>@(invite.Group?.Name ?? invite.GroupId.ToString())</td>
                <td>@(invite.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</td>
                <td>@(invite.ExpiresAt?.ToString("yyyy-MM-dd HH:mm") ?? "â€”")</td>
                <td>
                    @* Show the current status of the invite *@
                    @if (invite.TimesUsed >= 1 && !invite.IsExpired)
                    {
                        <span class="text-muted">Used (still active)</span>
                    }
                    else if (invite.IsExpired)
                    {
                        <span class="text-warning">Expired</span>
                    }
                    else
                    {
                        <span class="text-success">Active</span>
                    }
                </td>
                @* Link to view the full details of this invite *@
                <td>
                    <a asp-action="InviteDetails" asp-controller="Groups" asp-route-groupId="@invite.GroupId" asp-route-inviteId="@invite.Id" class="btn btn-sm btn-outline-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
