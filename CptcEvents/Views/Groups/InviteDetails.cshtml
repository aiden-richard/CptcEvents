@model CptcEvents.Models.GroupInvite
@{
    ViewData["Title"] = "Invite Details";
}

@* Display detailed information about a specific invite *@
<h1>Invite Details</h1>

@* All the metadata for this invite *@
<div>
    <h2>Invite Code: @Model.InviteCode</h2>
    <p>Group: @Model.Group.Name (ID: @Model.Group.Id)</p>
    <p>Created At: @Model.CreatedAt.ToString("g")</p>
    <p>Expires: @(Model.ExpiresAt?.ToString("g") ?? "Never")</p>
    <p>Current Uses: @Model.TimesUsed</p>
    <p>One Time Use: @(Model.OneTimeUse ? "Yes" : "No")</p>
    <p>Status: @(Model.TimesUsed >= 1 ? "Used" : "Active")</p>
    @if (Model.InvitedUserId != null)
    {
        <p>Invited User ID: @Model.InvitedUserId</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to My Invites</a>
</div>
