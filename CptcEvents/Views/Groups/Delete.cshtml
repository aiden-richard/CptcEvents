@model CptcEvents.Models.Group

@{
    ViewData["Title"] = "Delete Group";
}

@* Confirmation screen to permanently remove a group and its data *@

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Group</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-muted">@Model.Description</p>
                    }
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Members</dt>
                        <dd class="col-sm-8">@Model.MemberCount</dd>
                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("g")</dd>
                        <dt class="col-sm-4">Privacy</dt>
                        <dd class="col-sm-8">@Model.PrivacyLevel</dd>
                    </dl>
                    <div class="alert alert-danger mt-3 mb-0">
                        <strong>Warning:</strong> This action cannot be undone. All group data, members, events, and invites will be permanently deleted.
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <form asp-action="Delete" asp-route-groupId="@Model.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete Group</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
