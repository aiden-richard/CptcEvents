@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="mx-auto text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-5 mx-auto">
        <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center">Use a local account to log in.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Identifier" class="form-control border-secondary-subtle bg-light" autocomplete="username" aria-required="true" placeholder="myuser123" />
                <label asp-for="Input.Identifier" class="form-label">Username or Email</label>
                <span asp-validation-for="Input.Identifier" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control border-secondary-subtle bg-light" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input  border-secondary-subtle" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
            </div>
            <div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
